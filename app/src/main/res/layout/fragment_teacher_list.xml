<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.teacherList.TeacherListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/purple_dark">

            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/button_go_back"
                        android:layout_width="42dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_arrow_left"
                        android:background="@null"
                        android:contentDescription="Botão voltar"
                        app:tint="@color/text_in_purple_base" />

                    <TextView
                        android:id="@+id/text_view_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estudar"
                        android:textColor="@color/text_in_purple_base"
                        android:fontFamily="@font/archivo_semi_bold"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/image_view_logo"
                        android:layout_width="32dp"
                        android:layout_height="16dp"
                        android:src="@drawable/proffy"
                        android:layout_marginEnd="20dp"/>
                </LinearLayout>
            </Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/scrollview_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/app_bar_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:overScrollMode="ifContentScrolls"
            android:scrollIndicators="none">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_title_filters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingHorizontal="32dp"
                    android:background="@color/purple"
                    android:paddingBottom="70dp">

                    <TextView
                        android:id="@+id/text_view_title_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proffys\nDisponíveis"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/archivo_bold"
                        android:textColor="@color/text_in_purple_base"
                        android:textSize="24sp" />
                    <ImageView
                        android:id="@+id/image_view_emoji"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/emoji"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/text_view_connections_proffys"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Emoji com oculos e sorrrindo"/>

                    <TextView
                        android:id="@+id/text_view_connections_proffys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32 proffys"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="50dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:textColor="@color/text_in_purple_base" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_title_header"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:background="@color/another_purple" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:hint="Matéria"
                        style="@style/CustomTextInputLayout.FilledBox">

                        <AutoCompleteTextView
                            android:id="@+id/text_input_text_view_subject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/text_base"
                            android:textSize="14sp"
                            android:fontFamily="?attr/textAppearanceLargePopupMenu"
                            android:textAppearance="@font/poppins_regular"
                            android:background="@drawable/bg_dropdown_rounded"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_week_day"
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_input_layout_subject"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        android:hint="Dia da Semana"
                        style="@style/CustomTextInputLayout.FilledBox">

                        <AutoCompleteTextView
                            android:id="@+id/text_input_text_view_week_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/text_base"
                            android:textSize="14sp"
                            android:fontFamily="?attr/textAppearanceLargePopupMenu"
                            android:textAppearance="@font/poppins_regular"
                            android:background="@drawable/bg_dropdown_rounded"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_hour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/text_input_layout_subject"
                        app:layout_constraintStart_toEndOf="@id/text_input_layout_week_day"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="9dp"
                        android:hint="Hora"
                        style="@style/CustomTextInputLayout.FilledBox">

                        <AutoCompleteTextView
                            android:id="@+id/text_input_text_view_hour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="time"
                            android:textColor="@color/text_base"
                            android:textSize="14sp"
                            android:fontFamily="?attr/textAppearanceLargePopupMenu"
                            android:textAppearance="@font/poppins_regular"
                            android:background="@drawable/bg_dropdown_rounded"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginBottom="17dp"
                    app:layout_constraintTop_toBottomOf="@id/container_title_filters"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="-30dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/container_teacher_rounded_background">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_view_teacher"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/image_person"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="24dp" />

                    <TextView
                        android:id="@+id/text_view_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fulano de Tal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_view_teacher"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="14dp"
                        android:fontFamily="@font/archivo_bold"
                        android:textSize="20sp"
                        android:textColor="@color/text_title" />

                    <TextView
                        android:id="@+id/text_view_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Química"
                        app:layout_constraintTop_toBottomOf="@id/text_view_fullname"
                        app:layout_constraintStart_toEndOf="@id/image_view_teacher"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="14dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/text_base" />

                    <TextView
                        android:id="@+id/text_view_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdasdasdasda rdasdasd aasdasdodadadssad"
                        app:layout_constraintTop_toBottomOf="@id/image_view_teacher"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="24dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/text_base" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider_container_teacher"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/text_view_bio"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        app:dividerColor="@color/lines_in_white"
                        app:dividerInsetStart="0dp"
                        app:dividerInsetEnd="0dp" />

                    <LinearLayout
                        android:id="@+id/list_day_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/divider_container_teacher"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="24dp"
                        android:background="@drawable/container_teacher_rounded_background"
                        android:backgroundTint="@color/shape_02_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp">
                        <TextView
                            android:id="@+id/text_view_week_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Segunda"
                            android:fontFamily="@font/archivo_bold"
                            android:textSize="16sp" />
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.65" />

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_right" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.65" />

                        <TextView
                            android:id="@+id/text_view_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8h - 18h"
                            android:fontFamily="@font/archivo_bold"
                            android:textColor="@color/text_base"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider_hours"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/list_day_hours"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="24dp"
                        app:dividerColor="@color/lines_in_white"
                        app:dividerInsetStart="0dp"
                        app:dividerInsetEnd="0dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_cost_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/divider_hours"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingBottom="24dp"
                        android:background="@drawable/container_cost_contact_roudend_background">

                        <TextView
                            android:id="@+id/text_view_cost_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço da minha hora:"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14sp"
                            android:textColor="@color/text_base"/>

                        <TextView
                            android:id="@+id/text_view_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 80,00 reais"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="21dp"
                            android:layout_marginEnd="24dp"
                            android:fontFamily="@font/archivo_bold"
                            android:textSize="16sp"
                            android:textColor="@color/purple" />

                        <ImageButton
                            android:id="@+id/image_button_favorite"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/unfavorite"
                            android:background="@drawable/button_rounded_corner"
                            android:backgroundTint="@color/delete"
                            app:layout_constraintTop_toBottomOf="@id/text_view_cost_info"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginBottom="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_send_contact"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            app:layout_constraintTop_toBottomOf="@id/text_view_cost"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/image_button_favorite"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="24dp"
                            app:backgroundTint="@color/green"
                            android:background="@drawable/button_rounded_corner"
                            android:text="Entrar em contato"
                            android:textAllCaps="false"
                            app:icon="@drawable/whatsapp"
                            app:iconGravity="start"
                            app:iconPadding="8dp"
                            app:iconTint="@null"
                            android:stateListAnimator="@null"
                            android:fontFamily="@font/archivo_semi_bold"
                            android:textSize="16sp"
                            android:textColor="@color/shape_01_white" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>




